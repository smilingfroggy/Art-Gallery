<div class="container">
  <div class="my-4 text-center">
    <h1 class="h3 font-weight-normal mb-3">Forgot Password</h1>
  </div>
  <div class="d-flex justify-content-center">
    <form action="/user/forgot-password" method="POST" style="width: 540px">
      <div class="form-row mb-3">
        <label class="form-label" for="email">Email</label>
        <input class="form-control" id="email" type="email" name="email" class="form-control" placeholder="Email"
          required autofocus>
      </div>

      <!-- reCAPTCHA -->
      <div class="form-row mb-3">
        <div class="g-recaptcha" data-sitekey="{{RECAPTCHA_SITEKEY}}">
        </div>
      </div>

      <div class="d-grid mb-3">
        <button class="btn btn-primary" type="submit">Send OTP to my email</button>
      </div>
    </form>
  </div>
</div>

<script>
  // reCAPTCHA verification
  let form = document.querySelector('form');
  form.addEventListener('submit', event => {    
    if (grecaptcha.getResponse() == "") {
      event.preventDefault();
      alert("Please verify reCAPTCHA");
    }
  });

</script>